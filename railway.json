{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22", "python311"]
        },
        "install": {
          "cmds": ["npm ci --prefix frontend", "python -m pip install --upgrade pip", "python -m pip install -r requirements.txt"]
        },
        "build": {
          "cmds": ["npm run build --prefix frontend"]
        }
      },
      "start": {
        "cmd": "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port $PORT"
      }
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
